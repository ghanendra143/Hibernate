<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "withoutAnnotation.Employee" table = "EmployeesInfo">
      
      <id name = "id" >
         <generator class="increment"/>  <!-- for auto-increment -->
      </id>
      
      <property name = "name" />
      <property name = "age" />
      <property name = "address" />
      
   </class>
</hibernate-mapping>